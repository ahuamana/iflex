---
/**
 * Solution Component
 * Displays the AI-powered solution for posture analysis
 * Includes responsive image handling and consistent styling
 * Uses multilingual support for global accessibility
 */
import Section from './Section.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section
  title={t('solution.title')}
  description={t('solution.description')}
  id="solution">
  <img 
    src="https://images.unsplash.com/photo-1633613286991-611fe299c4be?auto=format&fit=crop&q=80&w=1200" 
    alt="AI Analyzing Posture" 
    class="section-image" 
    loading="lazy"
    onerror="this.onerror=null; this.src='https://via.placeholder.com/1200x800?text=AI+Analysis+Image'"
  >
</Section>

<link rel="stylesheet" href="/styles/components/solution.css" />
---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import ImageModal from './ImageModal.astro';
import HeroSlider from './HeroSlider.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="hero">
  <ImageModal id="imageModal" />
  <div class="hero-overlay"></div>
  <div class="container split-layout">
    <div class="hero-images animate-in">
      <HeroSlider />
    </div>
    <div class="hero-content">
      <span class="hero-badge animate-in">{t('hero.badge')}</span>
      <h1 class="animate-in">{t('hero.title')}</h1>
      <p class="animate-in">{t('hero.description')}</p>
      <div class="hero-stats animate-in">
        <div class="stat">
          <span class="stat-number">98%</span>
          <span class="stat-label">{t('hero.stats.accuracy')}</span>
        </div>
        <div class="stat">
          <span class="stat-number">-60%</span>
          <span class="stat-label">{t('hero.stats.painReduction')}</span>
        </div>
      </div>
      <div class="button-group animate-in">
        <a href="#signup" class="btn-primary">{t('hero.getStarted')}</a>
        <a href="#features" class="btn-secondary">{t('hero.learnMore')}</a>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="/styles/components/hero.css" />